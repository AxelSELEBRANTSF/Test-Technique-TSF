@model CrudApp.Models.Product
@{
    ViewData["Title"] = "Product Details";
}
<h1>Product Details</h1>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>
            <dt class="col-sm-2">Price</dt>
            <dd class="col-sm-10">@Model.Price</dd>
            <dt class="col-sm-2">Stock</dt>
            <dd class="col-sm-10">@Model.Stock</dd>
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@Model.Description</dd>
        </dl>
        <a class="btn btn-warning" href="@Url.Action("Edit", new { id = Model.Id })">Edit</a>
        <a class="btn btn-secondary" href="@Url.Action("Index")">Back to List</a>
    </div>
</div>
