@model IEnumerable<CrudApp.Models.Product>
@{
    ViewData["Title"] = "Products";
}
<h1>Products</h1>

<p><a class="btn btn-primary" href="@Url.Action("Create")">Create New</a></p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>
                    <a class="btn btn-sm btn-info" href="@Url.Action("Details", new { id = item.Id })">Details</a>
                    <a class="btn btn-sm btn-warning" href="@Url.Action("Edit", new { id = item.Id })">Edit</a>
                    <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", new { id = item.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
